<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="110dp">

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/list_item_alarm_enabled_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="16dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/list_item_alarm_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_alarm_enabled_switch"
        android:paddingLeft="16dp"
        android:paddingTop="30dp"/>

    <TextView
        android:id="@+id/list_item_alarm_time_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_alarm_enabled_switch"
        android:layout_below="@id/list_item_alarm_title_text_view"
        android:paddingLeft="16dp"/>

    <View
        android:layout_alignParentBottom="true"
        style="@style/Divider" />

</RelativeLayout>