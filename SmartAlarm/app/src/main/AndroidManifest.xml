<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.microsoft.smartalarm">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false"/>

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".OnboardingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".AlarmSettingsActivity"
            android:parentActivityName=".AlarmListActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".AlarmListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

        <activity
            android:name=".AlarmRingingActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>

        <receiver
            android:name=".AlarmWakeReceiver"
            android:enabled="true"
            android:exported="false"/>

        <service
            android:name=".AlarmRingingService"
            android:enabled="true"/>

        <receiver
            android:name=".AlarmManagerHelper">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.TIMEZONE_CHANGED"/>
                <action android:name="android.intent.action.TIME_SET"/>
                <action android:name="android.intent.action.DATE_CHANGED"/>
            </intent-filter>
        </receiver>

        <activity
            android:name=".AlarmGlobalSettingsActivity"
            android:label="@string/title_activity_alarm_settings"
            android:parentActivityName=".AlarmListActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.microsoft.smartalarm.AlarmListActivity"/>
        </activity>

        <activity
            android:name=".LearnMoreActivity"
            android:label="@string/title_activity_learn_more">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.microsoft.smartalarm.AlarmListActivity"/>
        </activity>

        <activity
            android:name=".GameTwister"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".GameColorFinderActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
        </activity>

        <activity
            android:name=".GameEmotionActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
        </activity>

        <activity
            android:name=".GameNoNetwork"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
        </activity>

        <activity
            android:name=".ShareActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
        </activity>

        <activity android:name="net.hockeyapp.android.UpdateActivity"/>
        <activity android:name="net.hockeyapp.android.FeedbackActivity"/>
        <activity android:name="net.hockeyapp.android.PaintActivity"/>

        <meta-data
            android:name="com.microsoft.smartalarm.token.mixpanel"
            android:value="${MIXPANEL_TOKEN}"/>
        <meta-data
            android:name="com.microsoft.smartalarm.token.speech"
            android:value="${SPEECH_TOKEN}"/>
        <meta-data
            android:name="com.microsoft.smartalarm.token.vision"
            android:value="${VISION_TOKEN}"/>
        <meta-data
            android:name="com.microsoft.smartalarm.token.emotion"
            android:value="${EMOTION_TOKEN}"/>
        <meta-data
            android:name="com.microsoft.smartalarm.token.hockeyapp"
            android:value="${HOCKEYAPP_TOKEN}"/>
    </application>

</manifest>
